<form method="post" action="/gallery/manager/exhibits/<%= @exhibit.id %>">
  <label for="exhibit-name-field">Exhibit Name:</label>
  <input
  type="text"
  name="exhibit_name"
  id="exhibit-name-field"
  value="<%= @exhibit.exhibit_name %>"
  />

  <label for="category-field">Category:</label>
  <input
  type="text"
  name="category"
  id="category-field"
  value="<%= @exhibit.category %>"
  />

  <label for "artist-select">Artist</label>
    <select id="artist-select" name="artist_id" type="text">
      <% for artist in @artists %>
      <option value="<%= artist.id%>">
        <%= artist.last_name%></option>
        <% end %>
      </select>

  <input type='submit' value="Update Exhibit">
</form>
